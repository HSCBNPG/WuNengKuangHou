page {
    background: #f7f7f7
}
.rela{
    position: relative;
}
.abs{
    position: absolute;
top: -10%;
width: 30rpx;
height: 30rpx;
background: red;
border-radius: 50rpx;
color: #fff;
right: 10%;
}
.kegu button{
    line-height: 36rpx;
    border: 0;
    background: transparent;
    overflow: hidden;
    padding: 0;
    font-size:30rpx;
    color: #666;
    width: 118px;
}
/* .user_box{background:#717582;padding:40rpx 40rpx;overflow:hidden;position:relative;margin-bottom:30rpx} */
.user_box {
    background: #ff394d;
    padding: 40rpx 0;
    overflow: hidden;
    position: relative;
    margin-bottom: 30rpx
}

.user_info,
.user_img {
    float: left;
}

.user_img image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 0
}

.user_info {
    margin-left: 40rpx;
    color: #fff;
    flex: 1
}

.user_info text {
    font-size: 30rpx;
    display: block;
    line-height: 1;
    color: #f0f0f0
}

.user_info .name {
    font-size: 36rpx;
    margin-bottom: 16rpx
}

.user_grade {
    background: #464646;
    border-radius: 40rpx 0 0 40rpx;
    color: #fabc18;
    float: right;
    padding: 6rpx 10rpx
}

.user_grade text {
    margin: 0 10rpx
}

.cu-list {
    margin-bottom: 30rpx
}

.cu-list.card-menu {
    display: block
}

.cu-list.menu>.cu-item {
    min-height: 84rpx
}

.cu-list.menu>.cu-item.arrow {
    padding-right: 64rpx
}

.cu-item text {
    font-size: 32rpx
}

.cu-item .text-grey {
    font-size: 28rpx;
    color: #949ca1
}

.grid {
    padding-top: 30rpx
}

.grid view {
    padding-bottom: 30rpx
}

.grid view image {
    width: 56rpx;
    height: 56rpx
}

.grid view text {
    display: block
}

.nopoint.menu>.cu-item.arrow:before {
    content: ""
}


button::after {
    border: none;
}

.user_button {
    background: rgba(225, 255, 240, 0.8);
    border-radius: 40rpx;
    height: 48rpx;
    padding: 0 10rpx;
    overflow: hidden;
    line-height: 45rpx;
    color: #fff;
    font-size: 30rpx;
}

.phone {
    background-color: rgba(52, 52, 52, 0.6);
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0
}

.iphone {
    width: 60%;
    background: #fff;
    margin: 50% auto;
    height: 300rpx;
    border-radius: 10px;
    text-align: center;
}

.iphone image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50px;
}

.iphone button {
    background-color: #ff394d;
    border-radius: 50rpx;
    line-height: 40rpx;
    padding: 20rpx;
    color: #fff;
    font-size: 28rpx;
    top: 10%;
    width: 70%; 
}

.item_message {
    position: absolute;
    top: -9%;
    left: 61%;
    width: 30rpx;
    height: 30rpx;
    background: red;
    color: #fff;
    border-radius: 50rpx;
}